@using Microsoft.AspNet.Identity
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <link rel="apple-touch-icon" sizes="76x76" href="../assets/img/apple-icon.png" />
    <link rel="icon" type="image/png" href="~/favicon.ico" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <title>Clinical Athlete</title>
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
    <meta name="viewport" content="width=device-width" />
    <!-- Bootstrap core CSS     -->

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <!--  Material Dashboard CSS    -->
    <link href="~/Content/material-dashboard.css?v=1.2.0" rel="stylesheet" />
    <!--  CSS for Demo Purpose, don't include it in your project     -->
   
     
    <!--     Fonts and icons     -->
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <link href='http://fonts.googleapis.com/css?family=Roboto:400,700,300|Material+Icons' rel='stylesheet' type='text/css'>
</head>
<body>
    <div class="wrapper">
        <div class="sidebar" data-color="purple" data-image="../assets/img/sidebar-1.jpg">
            <div class="logo">
                <a href="#" class="simple-text">
                    <img src="~/Content/logo.png" height="60" width="180" />
                </a>
            </div>
            <div class="sidebar-wrapper">
                <ul class="nav">
                    <li class="active">
                        <a id="dash" href="@Url.Action("Dashboard","Admin",new { Area="Admin"})">
                            <i class="material-icons">dashboard</i>
                            <p>Dashboard</p>
                        </a>
                    </li>
                    <li>
                        <a id="import" href="@Url.Action("Import","Admin",new { Area="Admin"})">
                            <i class="material-icons">person</i>
                            <p>Exercises</p>
                        </a>
                    </li>
                    <li>
                        <a id="users" href="@Url.Action("Users","Admin",new { Area="Admin"})">
                            <i class="material-icons">content_paste</i>
                            <p>Users</p>
                        </a>
                    </li>

                </ul>
            </div>
        </div>
        <div class="main-panel">
            <nav class="navbar navbar-default navbar-absolute">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand text-primary" href="#">Administrator <i class="fa fa-wrench fa-2x text-primary" aria-hidden="true"></i></a>
                    </div>
                    <div class="collapse navbar-collapse">
                        @if (Request.IsAuthenticated)
                        {
                            <ul class="nav navbar-nav navbar-right">
                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle icon-primary" data-toggle="dropdown">
                                        <i class="material-icons text-primary">person</i> <strong class="text-primary">Welcome:</strong> @User.Identity.GetUserName().ToLower()
                                        <b class="caret"></b>
                                    </a>
                                    <ul class="dropdown-menu dropdown-with-icons">

                                        @using (Html.BeginForm("LogOff", "Account", new { Area = "" }, FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
                                        {
                                            @Html.AntiForgeryToken()
                                            <li class="">
                                                <a href="javascript:document.getElementById('logoutForm').submit()"><i class="fa fa-sign-out"></i> Log off</a>
                                            </li>

                                        }

                                    </ul>
                                </li>


                            </ul>
                        }
                    </div>
                </div>
            </nav>
            <div class="content">
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </div>
            <footer class="footer footer-white">
                <div class="container">

                    <p class="copyright pull-right">
                        &copy;
                        <script>
                            document.write(new Date().getFullYear())
                        </script>
                        <a href="#">Clinical Athletes</a>
                    </p>
                </div>
            </footer>
        </div>

    </div>
    <!--   Core JS Files   -->
    <script src="~/Scripts/js/jquery-3.2.1.min.js"></script>

    <script src="~/Scripts/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="~/Scripts/js/material.min.js" type="text/javascript"></script>

    <!--  Dynamic Elements plugin -->
    <script src="~/Scripts/js/arrive.min.js"></script>
    <!--  PerfectScrollbar Library -->
    <script src="~/Scripts/js/perfect-scrollbar.jquery.min.js"></script>
    <!--  Notifications Plugin    -->
    <script src="~/Scripts/js/bootstrap-notify.js"></script>
    @RenderSection("scripts", required: false)
    <script>

        $(document).ready(function () {
            if (window.location.href.indexOf('success') > 0)
                showNotification('top', 'right', 'Exercise plan imported successfully!', 'warning') 

            $(".nav a").on("click", function () {
                $(".nav").find(".active").removeClass("active");
                $(this).parent().addClass("active");
            });
        });
    </script>
</body>

</html>