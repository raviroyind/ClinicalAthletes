@model Int32

@{
    string ddlId ="ddl"+ Model.ToString();
}

<div class="row">
    <div class="col-sm-4 col-md-4 col-lg-4 col-lg-offset-4">
        <select id="@ddlId" name="@ddlId" class="k-dropdown" style="width: 100%;"></select>
        <script>
            $("#@ddlId").kendoDropDownList({
                dataTextField: "Name",
                dataValueField: "Id",
                optionLabel: 'Select',
                dataSource: {
                    transport: {
                        read: {
                            dataType: "json",
                            url: "/api/exercise/getExerciseTypes?exercisePlanId=" + $('#ExercisePlanId').val(),
                        }
                    }
                }
            });
        </script>
    </div>
</div>
<br />


