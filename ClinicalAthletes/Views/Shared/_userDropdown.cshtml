@model Int32

@{
    string ddlId = "ddl" + Model.ToString();
}
<select id="@ddlId" name="@ddlId" class="k-dropdown" style="width: 100%;margin-bottom:12px;"></select>
       
        <script>
            $("#@ddlId").kendoDropDownList({
                dataTextField: "name",
                dataValueField: "id",
                optionLabel: 'Select',
                dataSource: {
                    transport: {
                        read: {
                            dataType: "json",
                            url: "/api/exercise/getExercises?exerciseTypeId=" + @Model.ToString(),
                        }
                    }
                },
                change: function (e) {
                    if ($("#ExerciseTypeIds").val()==='')
                        $("#ExerciseTypeIds").val(this.value());
                    else
                        $("#ExerciseTypeIds").val(($("#ExerciseTypeIds").val() + "," + this.value()));
                }
            });

        </script>
 
 


