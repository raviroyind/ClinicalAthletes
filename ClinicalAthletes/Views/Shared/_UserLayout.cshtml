@using Microsoft.AspNet.Identity
<!doctype html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0" name="viewport">
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/material-kit.css" rel="stylesheet" />
    <script src="~/Scripts/js/jquery-3.2.1.min.js"></script>
    <script src="https://kendo.cdn.telerik.com/2017.3.1026/js/kendo.all.min.js"></script>
</head>
<body>
    <nav class="navbar navbar-default navbar-absolute navbar-fixed">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navigation-example">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">
                    <img src="~/Content/logo.png" height="60" width="190" style="padding-bottom:10px;" />
                </a>
            </div>

            <div class="collapse navbar-collapse navbar-ex1-collapse">
                <ul class="nav navbar-nav navbar-left">
                    <li>
                        <a href="@Url.Action("Dashboard", "User")">
                            <span class="text-primary" style="font-size:16px;font-weight:bold;">|</span> <i class="fa fa-dashboard text-primary"></i> Dashboard
                        </a>
                    </li>
                    <li>
                        <a href="#">
                            <span class="text-primary" style="font-size:16px;font-weight:bold;">|</span> <i class="fa fa-question-circle-o text-primary"></i> How this works
                        </a>
                    </li>
                    <li>
                        <a href="#">
                            <span class="text-primary" style="font-size:16px;font-weight:bold;">|</span> <i class="fa fa-gear text-primary"></i> Account
                        </a>
                    </li>
                </ul>

                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <a href="#" class="text-primary dropdown-toggle" data-toggle="dropdown">
                            <i class="fa fa-user text-primary"></i>Welcome: @User.Identity.Name <b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu dropdown-with-icons">

                            @using (Html.BeginForm("LogOff", "Account", new { Area = "" }, FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
                            {
                                @Html.AntiForgeryToken()
                                <li class="">
                                    <a href="javascript:document.getElementById('logoutForm').submit()"><i class="fa fa-sign-out"></i> Log off</a>
                                </li>
                            }

                        </ul>
                    </li>
                </ul>

            </div>
        </div>
    </nav>
    <div class="container">
        @RenderBody()
    </div>
    <footer class="footer footer-black">
        <div class="container">
            <nav class="pull-left">
                <ul>
                    <li>
                        <a href="#">

                        </a>
                    </li>
                    <li>
                        <a href="#">
                            About Us
                        </a>
                    </li>
                    <li>
                        <a href="#">
                            Blog
                        </a>
                    </li>
                    <li>
                        <a href="#">
                            Contact Us
                        </a>
                    </li>
                </ul>
            </nav>
            <div class="copyright pull-right">
                ©
                <script>document.write(new Date().getFullYear())</script> <a href="#" target="_blank">Clinical Athlete</a>
            </div>
        </div>
    </footer>


    <script src="~/Scripts/js/bootstrap.min.js"></script>
    <script src="~/Scripts/js/anon/material.min.js"></script>
    <script src="~/Scripts/js/anon/bootstrap-selectpicker.js"></script>
    <script src="~/Scripts/js/anon/material-kit.js"></script>
    <script src="~/Scripts/js/anon/bootstrap-tagsinput.js"></script>
    <script src="~/Scripts/js/bootstrap-notify.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
